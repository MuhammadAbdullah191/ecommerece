<div class="container-fluid m-0">
<div class="text-center">
<h1>
Welcome To Profile Page</h1>
<p><%= @user.email %></p>
<%= Product.last.images.first%>
<%= image_tag(Product.last.images.last, alt: "avatar", class: "avatar", id: "avatar") %>
</div>
</div>

<%# View Products %>

<div class="text-center">
<%@user.products.each do |product|%>


<h2>
Name</h2>
<p><%=product.name%> </p>

<h2>
type</h2>
<p><%=product.product_type%></p>

<% if user_signed_in?%>
  <%if current_user.id == product.user_id%>
    <li><%= link_to "Edit", edit_product_path(product) %></li>
    <li><%= link_to "Destroy", product_path(product) , method: :delete, data: {confirm: "Are You Sure"}%></li>
  <%end%>
<%end%>
<%end%>
</div>

<%# Add Product %>


<div class="text-center">
<h2>Add a Product:</h2>
<%= form_with model: [ @user, @user.products.build ] do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :product_type %><br>
    <%= form.text_field :product_type %>
  </p>
  <p>

<div class="field">
    <div class="gravatar_edit">
      <%= form.file_field :images,
        placeholder: 'Upload picture',
        :multiple => true,
        direct_upload: true
        %>
    </div>
  </div>

    <%= form.submit %>
  </p>
<% end %>

</div>



