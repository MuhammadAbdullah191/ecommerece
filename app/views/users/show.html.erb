<div class="container-fluid m-0">
<div class="text-center">
<h1>
Welcome To Profile Page</h1>
  <%# <h1><%= @user.username</h1> %> %>
<p><%= @user.email %></p>
</div>
</div>

<%# View Products %>

<div class="text-center">
<%@user.products.each do |product|%>


<h2>
Name</h2>
<p><%=product.name%> </p>

<h2>
type</h2>
<p><%=product.product_type%></p>

<%end%>
</div>

<%# Add Product %>


<div class="text-center">
<h2>Add a Product:</h2>
<%= form_with model: [ @user, @user.products.build ] do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :product_type %><br>
    <%= form.text_field :product_type %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

</div>



