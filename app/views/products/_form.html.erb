
<% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>

<div class="m-5">
  <%= form_with model: product , local: true do |form| %>


  <form>
  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="inputEmail4">Name</label>
      <div>
      <%= form.text_field :name, :class => 'form-control' %>
      </div>
    </div>


  </div>


  <div class="form-group">
    <label for="inputAddress">Description</label>
   <%= form.text_field :product_type, :class => 'form-control' %>
  </div>



  <div class="form-row">


    <div class="form-group">
    <label for="inputAddress2">Quantity</label>
    <%# number_field_tag %>
    <%= form.number_field :quantity, :class => 'form-control' %>
  </div>

    <div class="form-group">
    <label for="inputAddress2">Price</label>
    <%# number_field_tag %>
    <%= form.number_field :price, :class => 'form-control' %>
  </div>
  </div>

   <div class="field">
    <div class="gravatar_edit">
      <%= form.file_field :images,
        placeholder: 'Upload picture',
        :multiple => true,
        direct_upload: true
        %>
    </div>
  </div>

  <div class="m-5">

    <%@product.images.each do|image| %>
      <%=image_tag(image,alt: "avatar", id: "avatar",:alt => "rss feed", :height =>"100", :width => "100") %>
       <%= link_to "Delete", active_storage_attachment_path(image),
             method: :delete, remote: :true,
             data: { confirm: "Are you sure you wanna this?" } %>

    <%end%>

  </div>

<%= form.submit %>
</form>


<% end %>

</div>






