<div class="container-fluid m-0">
<div class="text-center">
<h1>
<%=@product.name%></h1>

<div class="container" style ="width:80vh">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
    <%= image_tag(@product.images.first, alt: "avatar", class: "d-block w-100", id: "avatar") %>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>



<p><%= @product.id %></p>
</div>
</div>

<%# View Products %>

<div class="text-center">
<%@product.comments.each do |comment|%>

<h2>
Name</h2>
<p><%=comment.commenter%> </p>

<h2>
type</h2>
<p><%=comment.body%></p>

<%if user_signed_in?%>
  <%if comment.user_id==current_user.id%>
    <li><%= link_to "Edit", edit_product_comment_path(comment) %></li>
    <li><%= link_to "Destroy", comment_path(comment) , method: :delete, data: {confirm: "Are You Sure"} %></li>
  <%end%>
<%end%>

<%end%>
</div>

<%# Add Product %>


<%if user_signed_in?%>
  <div class="text-center">
  <%if current_user.id==@product.user_id%>
    You cannot comment on your own product
  <%else%>
    <h2>Add a Comment:</h2>
<%= form_with model: [ @product, @product.comments.build ] do |form| %>
  <p>
    <%= form.label :body %><br>
    <%=form.text_field :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <%end%>
<% end %>

</div>
<%else%>
  <h3>
    login to comment on products
  </h3>
<%end%>


